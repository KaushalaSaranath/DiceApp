<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePage">

    <TextView
        android:id="@+id/targetscoreId"
        android:layout_width="42dp"
        android:layout_height="24dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/targetscore" />

    <ImageView
        android:id="@+id/dice6"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dice1"
        app:layout_constraintTop_toBottomOf="@+id/computer"
        app:srcCompat="@drawable/dice_1" />

    <Button
        android:id="@+id/throwbtn"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/black"
        android:text="Throw"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice10" />

    <Button
        android:id="@+id/scorebtn"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="@color/black"
        android:text="Score"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/throwbtn" />

    <TextView
        android:id="@+id/user"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="User"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetscore" />

    <ImageView
        android:id="@+id/dice1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/dice2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice1"
        app:srcCompat="@drawable/dice_2" />

    <ImageView
        android:id="@+id/dice7"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dice2"
        app:layout_constraintTop_toBottomOf="@+id/dice6"
        app:srcCompat="@drawable/dice_2" />

    <ImageView
        android:id="@+id/dice8"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dice3"
        app:layout_constraintTop_toBottomOf="@+id/dice7"
        app:srcCompat="@drawable/dice_3" />

    <ImageView
        android:id="@+id/dice3"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice2"
        app:srcCompat="@drawable/dice_3" />

    <ImageView
        android:id="@+id/dice4"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice3"
        app:srcCompat="@drawable/dice_4" />

    <ImageView
        android:id="@+id/dice5"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice4"
        app:srcCompat="@drawable/dice_5" />

    <ImageView
        android:id="@+id/dice10"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dice5"
        app:layout_constraintTop_toBottomOf="@+id/dice9"
        app:srcCompat="@drawable/dice_5" />

    <TextView
        android:id="@+id/computer"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="38dp"
        android:text="Computer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userscore" />

    <ImageView
        android:id="@+id/dice9"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dice4"
        app:layout_constraintTop_toBottomOf="@+id/dice8"
        app:srcCompat="@drawable/dice_6" />

    <TextView
        android:id="@+id/score"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="26dp"
        android:text="Score"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/targetscore"
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="32dp"
        android:text="Target Score"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:text="00"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/computerscore"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/computerscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="46dp"
        android:text="00"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="14dp"
        android:text="Round"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roundid"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="40dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/userscore"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="Total Wins"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="43dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="41dp"
        android:text="H:00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="19dp"
        android:layout_height="31dp"
        android:layout_marginTop="38dp"
        android:text="/"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginTop="41dp"
        android:text="C:00"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>